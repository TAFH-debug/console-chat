{
  "include": ["./src/**.ts"],
  "exclude": ["build", "node_modules"],
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./build",
    "skipLibCheck": true
  }
}
